# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Production CDP Configuration
PROD_CDP_API_KEY_NAME=your_prod_cdp_api_key_name
PROD_CDP_API_KEY_PRIVATE_KEY=your_prod_cdp_private_key

# Network Configuration
NODE_ENV=production
NETWORK_ID=base-mainnet  # Options: base-sepolia, base-mainnet

# Wallet Configuration
WALLET_TYPE=coinbase-managed

# Server Configuration
PORT=3000
HOST=0.0.0.0

# IPFS Configuration (Pinata)
PINATA_JWT=your_pinata_jwt_here
PINATA_GATEWAY=your_pinata_gateway_here

# Security Configuration (Optional)
ALLOWED_ORIGINS=https://yourdomain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes 