{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "^build"
      ]
    }
  },
  "globalDependencies": [
    "$OPENAI_API_KEY",
    "$DEV_CDP_API_KEY_NAME",
    "$DEV_CDP_API_KEY_PRIVATE_KEY",
    "$NETWORK_ID",
    "$WALLET_TYPE"
  ],
  "tasks": {
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "src/**/*.ts",
        "test/**/*.ts"
      ]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "docs": {
      "outputs": [
        "docs/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test:types": {
      "dependsOn": [
        "build"
      ]
    }
  }
}